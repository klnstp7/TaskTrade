@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <title>评E评管理系统</title>
    <link href="~/Content/css/login.css" type="text/css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Content/plug-in/layer/layer.js"></script>
</head>
<body style="overflow:hidden;">
    <div class="login-head">
        <div class="logo login-icon"></div>
        <div class="text"><p><span class="titles">估价流程与管理系统</span><span class="tips">后台管理</span></p></div>
    </div>
    <div class="login-body">
        <div class="login-form">
            <form class="sub-form" id="loginform">
                <div class="form-register">
                    <p>登录<a href="LoginRegister/Register">免费注册</a></p>
                </div>
                <div class="form-title"><label for="username" class="la-user"><span><i class="login-icon login-use-icon"></i></span><input type="text" id="username" name="username" placeholder="用户名" maxlength="20" /></label></div>
                <div class="form-title"><label for="password" class="la-pas"><span><i class="login-icon login-pas-icon"></i></span><input type="password" id="password" name="password" placeholder="登录密码" maxlength="20" /></label></div>
                <div class="login-check"><label for="login-check"><input type="checkbox" class="check-icon" id="login-check" />&nbsp;记住密码</label></div>
                <div class="form-title login-button"><button type="button" id="sub">登录</button></div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        $("#sub").click(function () {
            if ($("#username").val() == "" || $("#password").val() == "") {
                layer.alert('请输入用户名和密码!', { title: false, closeBtn: false, icon: 5, time: 3000 });
            }
        })
    </script>
</body>
</html>
